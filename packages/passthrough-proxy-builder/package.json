{
  "name": "@civic/passthrough-proxy-builder",
  "version": "0.0.4",
  "description": "CLI wizard for creating MCP passthrough proxies with hooks",
  "main": "dist/cli.js",
  "bin": {
    "passthrough-proxy-builder": "./dist/cli.js",
    "ppb": "./dist/cli.js"
  },
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/cli.js --banner:js='#!/usr/bin/env node' --minify && chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "test": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "proxy",
    "hooks",
    "cli",
    "model-context-protocol",
    "passthrough",
    "middleware"
  ],
  "author": "Civic Technologies, Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/civicteam/mcp-tools.git",
    "directory": "packages/passthrough-proxy-builder"
  },
  "bugs": {
    "url": "https://github.com/civicteam/mcp-tools/issues"
  },
  "homepage": "https://github.com/civicteam/mcp-tools/tree/main/packages/passthrough-proxy-builder#readme",
  "dependencies": {
    "@civic/simple-log-hook": "workspace:^",
    "@civic/audit-hook": "workspace:^",
    "@civic/guardrail-hook": "workspace:^",
    "@civic/custom-description-hook": "workspace:^",
    "@civic/explain-hook": "workspace:^",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ejs": "^3.1.9",
    "inquirer": "^9.2.15",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@vitest/ui": "^3.2.2",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

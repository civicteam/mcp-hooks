{
  "name": "@civic/passthrough-proxy-builder",
  "version": "1.0.0",
  "description": "CLI wizard for creating MCP passthrough proxies with hooks",
  "main": "dist/cli.js",
  "bin": {
    "passthrough-proxy-builder": "./dist/cli.js",
    "ppb": "./dist/cli.js"
  },
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/cli.js --banner:js='#!/usr/bin/env node' --external:node:fs --external:node:path --external:node:child_process --external:node:os --external:node:crypto --external:node:util --external:node:stream --external:node:events --external:node:net --external:node:tty --external:node:url --external:node:fs/promises && chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "test": "echo 'No tests yet'",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": ["mcp", "proxy", "hooks", "cli"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@civic/audit-hook": "workspace:*",
    "@civic/guardrail-hook": "workspace:*",
    "@civic/explain-hook": "workspace:*",
    "@civic/custom-description-hook": "workspace:*",
    "@civic/simple-log-hook": "workspace:*",
    "@civic/passthrough-mcp-server": "workspace:*",
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "ejs": "^3.1.9",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/inquirer": "^9.0.7",
    "@types/ejs": "^3.1.5",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
